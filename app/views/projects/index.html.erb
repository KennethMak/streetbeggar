<div class="container">

	<%= link_to "Create a Project", new_project_url %></br>

	<div class="row">
		<% @projects.each do |project| %>
		<div class="col-sm-6 col-md-4">
			<div class="thumbnail">
				<h3><%= project.name %></h3>
				<div class="caption">
					<p><%= image_tag project.image.url(:medium) %></p>
					<p><%= project.description %></p>
					<strong> Funding Goal: </strong>
					<p><%= project.funding_goal %></p>
					<strong> Start Date: </strong>
					<p><%= project.start_date.to_date %></p>
					<strong> End Date: </strong>
					<p><%= project.end_date.to_date %></p>

					<p>
						<%= link_to 'Show', project %> 	
					</p>

					<p>
						<%= link_to 'Delete', project, method: :delete, data: {confirm: "Are you sure you want to delete?"}%>
					</p>
					
					<p>
						Project created by: <%= project.creator.try(:email) %> 	
					</p>
					
				</div>
			</div>
		</div>
		<% end %>
	</div>
</div>

